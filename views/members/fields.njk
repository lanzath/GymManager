<div class="item">
    <div>Avatar (url)</div>
    <div>
        <input type="url" name="avatar_url" value="{{member.avatar_url}}" placeholder="http://">
    </div>
</div>

<div class="item">
    <div>Membro</div>
    <div>
        <input type="text" name="name" value="{{member.name}}" placeholder="Nome e sobrenome">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{member.birth}}">
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input type="radio" name="gender" value="M" {% if member.gender == 'M' %} checked {% endif %}>Masculino
        </span>
        <span>
            <input type="radio" name="gender" value="F" {% if member.gender == 'F' %} checked {% endif %}>Feminino
        </span>
    </div>
</div>

<button type="submit">Salvar</button>